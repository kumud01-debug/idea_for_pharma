<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <title>PharmaCloud Frontend</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
</head>
<body class="bg-light">
  <div class="container mt-5">
    <h2 class="text-center mb-4">PharmaCloud - Quality Control Records</h2>

    <!-- Add Record Form -->
    <div class="card mb-4">
      <div class="card-header">Add New Record</div>
      <div class="card-body">
        <form id="recordForm">
          <div class="mb-3">
            <label for="batch_number" class="form-label">Batch Number</label>
            <input type="text" class="form-control" id="batch_number" required>
          </div>
          <div class="mb-3">
            <label for="product_name" class="form-label">Product Name</label>
            <input type="text" class="form-control" id="product_name" required>
          </div>
          <div class="mb-3">
            <label for="test_result" class="form-label">Test Result</label>
            <input type="text" class="form-control" id="test_result" required>
          </div>
          <button type="submit" class="btn btn-primary">Add Record</button>
        </form>
      </div>
    </div>

    <!-- Records Table -->
    <div class="card">
      <div class="card-header">All Records</div>
      <div class="card-body">
        <table class="table table-bordered table-striped" id="recordsTable">
          <thead>
            <tr>
              <th>ID</th>
              <th>Batch Number</th>
              <th>Product Name</th>
              <th>Test Result</th>
              <th>Created At</th>
            </tr>
          </thead>
          <tbody>
            <!-- Records will be inserted here -->
          </tbody>
        </table>
      </div>
    </div>
  </div>

  <script>
    // Fetch and display records
    async function fetchRecords() {
      const response = await fetch('http://127.0.0.1:5000/records');
      const data = await response.json();

      const tableBody = document.querySelector("#recordsTable tbody");
      tableBody.innerHTML = "";

      data.forEach(record => {
        const row = `<tr>
          <td>${record.id}</td>
          <td>${record.batch_number}</td>
          <td>${record.product_name}</td>
          <td>${record.test_result}</td>
          <td>${new Date(record.created_at).toLocaleString()}</td>
        </tr>`;
        tableBody.innerHTML += row;
      });
    }

    // Handle form submission
    document.getElementById("recordForm").addEventListener("submit", async (e) => {
      e.preventDefault();
      const batch_number = document.getElementById("batch_number").value;
      const product_name = document.getElementById("product_name").value;
      const test_result = document.getElementById("test_result").value;

      await fetch('http://127.0.0.1:5000/records', {
        method: 'POST',
        headers: { 'Content-Type': 'application/json' },
        body: JSON.stringify({ batch_number, product_name, test_result })
      });

      // Reset form
      e.target.reset();

      // Refresh records
      fetchRecords();
    });

    // Initial load
    fetchRecords();
  </script>
</body>
</html>
